{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksConfig": {
      "phases": {
        "build": {
          "cmds": [
            "cd frontend && npm install && npm run build"
          ]
        }
      }
    }
  },
  "deploy": {
    "startCommand": "gunicorn wsgi:app",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
